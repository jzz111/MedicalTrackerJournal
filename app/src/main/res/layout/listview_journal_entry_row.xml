<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/listview_padding">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@drawable/slightly_rounded_rect_bg"
        android:padding="@dimen/listview_padding"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_default_month"
            android:id="@+id/category_month_year" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/listview_header"
        android:padding="@dimen/listview_padding"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/event_header"
            android:layout_width="@dimen/listview_header"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            android:foregroundGravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_event"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:alpha="@string/icon_faded"
                android:contentDescription="@string/ic_desc_event"
                android:src="@mipmap/ic_event_black_18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ic_event"
                android:layout_alignEnd="@id/ic_event"
                android:layout_alignLeft="@+id/ic_event"
                android:layout_alignRight="@+id/ic_event"
                android:layout_alignTop="@+id/ic_event"
                android:alpha="@string/text_faded"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/event_date"
                    android:layout_width="@dimen/text_event_date_height"
                    android:layout_height="@dimen/text_event_date_height"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingTop="5dp"
                    android:text="@string/text_default_date"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/event_day_of_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="@string/text_default_day_of_week"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/event_preview"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|start"
            android:alpha="@string/text_faded"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_title"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/text_listview_title_cellheight"
                android:text="@string/text_default_title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/text_listview_title_size"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/event_details"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/text_listview_preview_cellheight"
                android:text="@string/text_default_details"
                android:lines="2" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/listview_legends"></LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
